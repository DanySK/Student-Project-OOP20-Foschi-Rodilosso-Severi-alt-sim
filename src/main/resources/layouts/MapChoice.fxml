<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="mapchoice" stylesheets="@../css/mapchoice.css" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="alt.sim.controller.MapChoice">
    <children>
        <Pane prefHeight="506.0" prefWidth="822.0" stylesheets="@../css/mapchoice.css">
            <children>
                <Button id="go-back" fx:id="goBackBtn" layoutX="14.0" layoutY="26.0" mnemonicParsing="false"
                        prefHeight="21.0" prefWidth="26.0" stylesheets="@../css/leaderboard.css">
                    <graphic>
                        <ImageView id="go-back" fitHeight="38.0" fitWidth="93.0" pickOnBounds="true" 
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/go-back.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <TextField layoutX="308.0" layoutY="99.0" prefHeight="34.0" prefWidth="168.0" 
                           promptText="Enter a name...">
                    <font>
                        <Font name="Consolas Bold" size="18.0" />
                    </font></TextField>
                <ImageView fitHeight="143.0" fitWidth="149.0" layoutX="132.0" layoutY="144.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/airplane.png" />
                    </image>
                </ImageView>
                <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="465.0" layoutY="144.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/airplane.png" />
                    </image>
                </ImageView>
                <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="129.0" layoutY="320.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/airplane.png" />
                    </image>
                </ImageView>
                <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="465.0" layoutY="320.0" pickOnBounds="true" 
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/airplane.png" />
                    </image>
                </ImageView>
                <Label layoutX="175.0" layoutY="290.0" text="RIVERSIDE" textFill="#d6d6cb">
                    <font>
                        <Font name="Consolas Bold" size="12.0" />
                    </font></Label>
                <ImageView fitHeight="206.0" fitWidth="478.0" layoutX="164.0" layoutY="29.0" pickOnBounds="true" 
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                </ImageView>
                <Label layoutX="518.0" layoutY="290.0" text="SEASIDE" textFill="#d6d6cb">
                    <font>
                        <Font name="Consolas Bold" size="12.0" />
                    </font>
                </Label>
                <Label layoutX="181.0" layoutY="454.0" text="CITYSIDE" textFill="#d6d6cb">
                    <font>
                        <Font name="Consolas Bold" size="12.0" />
                    </font>
                </Label>
                <Label layoutX="506.0" layoutY="454.0" text="COUNTRYSIDE" textFill="#d6d6cb">
                    <font>
                        <Font name="Consolas Bold" size="12.0" />
                    </font>
                </Label>
                <Button id="info-btn" layoutX="484.0" layoutY="99.0" mnemonicParsing="false" prefHeight="7.0" 
                        prefWidth="7.0" stylesheets="@../css/mapchoice.css">
                    <font>
                        <Font name="Consolas Bold" size="14.0" />
                    </font>
                    <tooltip>
                        <Tooltip 
                            text="Name must have at most 12 chars&#10;and can only contain numbers and letters">
                            <font>
                                <Font name="Consolas Bold" size="12.0" />
                            </font>
                        </Tooltip>
                    </tooltip>
                    <graphic>
                        <ImageView accessibleRole="BUTTON" fitHeight="25.0" fitWidth="38.0" pickOnBounds="true" 
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/info.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="button" layoutX="571.0" layoutY="96.0" minHeight="34.0" minWidth="143.0" 
                        prefHeight="34.0" prefWidth="143.0" styleClass="blue-btn" 
                        stylesheets="@../css/mapchoice.css" text="PLAY" textFill="#d6d6cb">
                    <font>
                        <Font name="Consolas Bold" size="18.0" />
                    </font>
                </Button>
            </children>
        </Pane>
    </children>
</VBox>
