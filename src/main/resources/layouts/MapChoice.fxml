<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="bg" stylesheets="@../css/base.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="alt.sim.view.mapchoice.MapChoiceView">
        <Pane prefHeight="540.0" prefWidth="960.0" stylesheets="@../css/mapchoice.css">
                <Button id="go-back" layoutX="14.0" layoutY="26.0" onAction="#onGoBackClick" prefHeight="21.0"
                        prefWidth="26.0" stylesheets="@../css/leaderboard.css">
                    <graphic>
                        <ImageView id="go-back" fitHeight="38.0" fitWidth="93.0" pickOnBounds="true"
                                   preserveRatio="true">
                                <Image url="@../images/base/go-back.png" />
                        </ImageView>
                    </graphic>
         <styleClass>
            <String fx:value="img-btn" />
            <String fx:value="transparent" />
         </styleClass>
                </Button>
                <TextField id="name-txt" fx:id="nameTextField" layoutX="308.0" layoutY="99.0" 
                		   onKeyPressed="#onNameEnter"
                           prefHeight="34.0" prefWidth="168.0" promptText="Enter a name..."
                           stylesheets="@../css/mapchoice.css">
                    <font>
                        <Font name="Consolas Bold" size="18.0" />
                    </font></TextField>
            <Button id="map" fx:id="seasideBtn" layoutX="105.0" layoutY="159.0" onAction="#onSeasideClick"
                    prefHeight="120.0" prefWidth="198.0" stylesheets="@../css/mapchoice.css">
               <graphic>
                      <ImageView fitHeight="108.0" fitWidth="245.0" pickOnBounds="true" preserveRatio="true">
                              <Image url="@../images/map_choice/seaside_mapchoice.png" />
                      </ImageView>
               </graphic>
         <styleClass>
            <String fx:value="transparent" />
            <String fx:value="img-btn" />
         </styleClass>
            </Button>
            <Button id="map" fx:id="riversideBtn" layoutX="577.0" layoutY="140.0" onAction="#onRiversideClick"
                    stylesheets="@../css/mapchoice.css">
         <graphic>
                      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                              <Image url="@../images/map_components/airplane.png" />
                      </ImageView>
         </graphic>
         <styleClass>
            <String fx:value="transparent" />
            <String fx:value="img-btn" />
         </styleClass></Button>
            <Button id="map" fx:id="citysideBtn" layoutX="129.0" layoutY="328.0" onAction="#onCitysideClick"
                    stylesheets="@../css/mapchoice.css">
               <graphic>
                      <ImageView fitHeight="141.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                              <Image url="@../images/map_components/airplane.png" />
                      </ImageView>
               </graphic>
         <styleClass>
            <String fx:value="transparent" />
            <String fx:value="img-btn" />
         </styleClass>
            </Button>
            <Button id="map" fx:id="countrysideBtn" layoutX="577.0" layoutY="310.0" onAction="#onCountrysideClick"
                    prefHeight="132.0" prefWidth="166.0" stylesheets="@../css/mapchoice.css">
               <graphic>
                      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                              <Image url="@../images/map_components/airplane.png" />
                      </ImageView>
               </graphic>
         <styleClass>
            <String fx:value="transparent" />
            <String fx:value="img-btn" />
         </styleClass>
            </Button>
                <Label layoutX="630.0" layoutY="298.0" text="RIVERSIDE" textFill="#d6d6cb">
                    <font>
                        <Font name="Consolas Bold" size="12.0" />
                    </font></Label>
                <ImageView fitHeight="206.0" fitWidth="478.0" layoutX="164.0" layoutY="29.0" pickOnBounds="true"
                           preserveRatio="true">
                        <Image url="@../images/logos/logo.png" />
                </ImageView>
                <Label layoutX="184.0" layoutY="298.0" text="SEASIDE" textFill="#d6d6cb">
                    <font>
                        <Font name="Consolas Bold" size="12.0" />
                    </font>
                </Label>
                <Label layoutX="186.0" layoutY="484.0" text="CITYSIDE" textFill="#d6d6cb">
                    <font>
                        <Font name="Consolas Bold" size="12.0" />
                    </font>
                </Label>
                <Label layoutX="624.0" layoutY="484.0" text="COUNTRYSIDE" textFill="#d6d6cb">
                    <font>
                        <Font name="Consolas Bold" size="12.0" />
                    </font>
                </Label>
                <Button id="info-btn" layoutX="484.0" layoutY="99.0" prefHeight="7.0" prefWidth="7.0"
                        styleClass="transparent" stylesheets="@../css/mapchoice.css">
                    <font>
                        <Font name="Consolas Bold" size="14.0" />
                    </font>
                    <tooltip>
                        <Tooltip text="Name must have at most 12 chars &#10;and must contain only numbers and letters">
                            <font>
                                <Font name="Consolas Bold" size="12.0" />
                            </font>
                        </Tooltip>
                    </tooltip>
                    <graphic>
                        <ImageView accessibleRole="BUTTON" fitHeight="25.0" fitWidth="38.0" pickOnBounds="true"
                                   preserveRatio="true">
                                <Image url="@../images/map_choice/info.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button id="button" fx:id="playBtn" layoutX="571.0" layoutY="96.0" minHeight="34.0" minWidth="143.0"
                        onAction="#onPlayClick" prefHeight="34.0" prefWidth="143.0" styleClass="blue-btn"
                        stylesheets="@../css/base.css" text="PLAY RANDOM" textFill="#d6d6cb">
                    <font>
                        <Font name="Consolas Bold" size="18.0" />
                    </font>
                </Button>
            <Label layoutX="309.0" layoutY="82.0" text="NAME" textFill="#d6d6cb">
               <font>
                  <Font name="Consolas Bold" size="12.0" />
               </font>
            </Label>
      <TextField id="error-txt" fx:id="infoTextField" disable="true" editable="false" layoutX="328.0" layoutY="131.0" 
      			 prefHeight="5.0"
                 prefWidth="129.0" styleClass="transparent" stylesheets="@../css/mapchoice.css">
         <font>
            <Font name="Consolas Bold" size="10.0" />
         </font>
      </TextField>
        </Pane>
</VBox>
